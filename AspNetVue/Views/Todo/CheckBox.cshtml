
@{
    ViewBag.Title = "CheckBox";
}

<h2>Множество чекбоксов, привязанных к одному и тому же массиву:</h2>

<div id="example-3" class="demo">
    <input type="checkbox" id="jack" value="2" v-model="checkedNames">
    <label for="jack">Jack</label>
    <input type="checkbox" id="john" value="3" v-model="checkedNames">
    <label for="john">John</label>
    <input type="checkbox" id="mike" value="4" v-model="checkedNames">
    <label for="mike">Mike</label>
    <br>
    <span>Отмеченные имена: {{ checkedNames }}</span>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.26/vue.js"></script>

<script>

    new Vue({
        el: '#example-3',
        data: {
            checkedNames: []
        }
    })

</script>
